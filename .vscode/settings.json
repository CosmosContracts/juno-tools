{
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "css.validate": false,
  "editor.formatOnSave": true,
  "eslint.packageManager": "yarn",
  "eslint.workingDirectories": [
    {
      "!cwd": false,
      "pattern": "packages/*"
    },
    {
      "!cwd": false,
      "directory": "."
    }
  ],
  "npm.packageManager": "yarn"
}
